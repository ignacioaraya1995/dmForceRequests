# Real Estate Data Processing Tool - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================
# GENERAL SETTINGS
# ============================================================

# Language: 'en' for English, 'es' for Spanish
LANGUAGE=en

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================
# PATH CONFIGURATION
# ============================================================

# Base directory (leave empty to use current directory)
BASE_DIR=

# Input folder name (where CSV files are located)
INPUT_FOLDER=Files

# Output folder name (where Excel reports will be saved)
OUTPUT_FOLDER=Output File

# Dupes folder name (for previous suppression files)
DUPES_FOLDER=Dupes

# Log folder name (where log files will be stored)
LOG_FOLDER=logs

# FIPS reference file name
FIPS_FILENAME=FIPs.xlsx

# ============================================================
# PROCESSING PARAMETERS
# ============================================================

# Percentage of top records to retain (0.0 to 1.0)
# Example: 0.7 = keep top 70% by distress score
PERCENTAGE_TO_RETAIN=0.7

# Maximum LTV (Loan-to-Value) threshold
# Records with LTV > this value will be filtered out
LTV_MAX_THRESHOLD=999

# CSV encoding (usually utf-8)
CSV_ENCODING=utf-8

# ============================================================
# EXCEL FORMATTING
# ============================================================

# Excel sheet name for output
EXCEL_SHEET_NAME=Consolidated

# Maximum column width in Excel
MAX_COLUMN_WIDTH=50

# Column width padding
COLUMN_WIDTH_PADDING=2

# ============================================================
# FEATURE FLAGS
# ============================================================

# Enable console output
CONSOLE_OUTPUT=true

# Enable file logging
FILE_LOGGING=true

# Auto-remove ZIP files after extraction
AUTO_REMOVE_ZIPS=true

# ============================================================
# ADVANCED SETTINGS
# ============================================================

# Pandas low_memory option for CSV reading
LOW_MEMORY=false

# Number of rows to preview in logs (0 = disabled)
PREVIEW_ROWS=0
